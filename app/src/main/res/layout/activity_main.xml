<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pairCoordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0F2F1"
    tools:context="com.aajtech.mobile.goproshowcase.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:scaleType="centerInside"
            android:src="@drawable/gopro_postage" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:gravity="center"
            android:text="GoPro Showcase"
            android:textSize="35dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/pairPIN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter GoPro's WiFi PIN" />

        <EditText
            android:id="@+id/pairSSID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter GoPro's WiFi name" />

        <EditText
            android:id="@+id/pairPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter GoPro's WiFi Password" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/pairSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#009688"
            android:elevation="10dp"
            android:text="Pair"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
