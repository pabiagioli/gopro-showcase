<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aajtech.mobile.goproshowcase.MainActivity"
    android:id="@+id/pairCoordinatorLayout"
    android:background="#E0F2F1">
<LinearLayout
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp">
    <TextView
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GoPro Showcase"
        android:textStyle="bold"
        android:textSize="35dp"
        android:layout_margin="20dp"/>
    <EditText
        android:id="@+id/pairPIN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter GoPro's WiFi PIN"/>
    <EditText
        android:id="@+id/pairSSID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter GoPro's WiFi name"/>
    <EditText
        android:id="@+id/pairPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter GoPro's WiFi Password"/>
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/pairSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:text="Pair"
        android:backgroundTint="#009688"
        android:textColor="@android:color/white"
        android:textAllCaps="false"/>
</LinearLayout>
</android.support.design.widget.CoordinatorLayout>
